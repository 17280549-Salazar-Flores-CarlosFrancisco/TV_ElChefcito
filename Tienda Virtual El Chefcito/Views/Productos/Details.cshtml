@model VistasAct3.Models.Productos

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Detalles</h2>
<style>
    .btn-primary > a {
        text-decoration: none;
        color: white;
    }
</style>
<div>
    <hr />
    <div class="panel panel-info">
        <div class="panel-heading"><h4 style="font-weight:bold">Detalles del producto</h4></div>
        <div class="panel-body">
            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Existencia
                    </th>
                    <th>
                        Precio de venta $
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Estatus
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Imagen
                    </th>
                    <th>
                        Subcategoría
                    </th>
                </tr>

                <tr>
                    <th>
                        @Html.DisplayFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayFor(model => model.descripcion)
                    </th>
                    <th>
                        @Html.DisplayFor(model => model.existencia)

                    </th>
                    <th>
                        @Html.DisplayFor(model => model.precio_venta)
                    </th>
                    <th>
                        @Html.DisplayFor(model => model.stock)
                    </th>
                    <th>
                        @Html.DisplayFor(model => model.estatus)
                    </th>
                    <th>
                        @Html.DisplayFor(model => model.marca)
                    </th>
                    <th>
                        <img src="~/Content/img/products/@Html.DisplayFor(model => model.imagen)" alt="Imagen aqui" width="80" />
                    </th>
                    <th>
                        @Html.DisplayFor(model => model.Subcategorias.nombre)
                    </th>
                </tr>
            </table>

        </div>
    </div>
</div>
<div class="row">
    <button class="btn btn-danger col-md-2 "><span class="glyphicon glyphicon-list-alt"></span> <a href="/Productos" style="text-decoration: none; color:white"> Regresar a la lista</a> </button>
    <button class="btn btn-primary col-md-2 col-md-offset-1"><span class="glyphicon glyphicon-edit"></span> @Html.ActionLink("Editar", "Edit", new { id = Model.Id_producto })</button>
</div>
