@model IEnumerable<VistasAct3.Models.Productos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Listado de productos</h2>

<style>
    .btn-primary > a {
        text-decoration: none;
        color: white;
    }

    .btn-warning > a {
        text-decoration: none;
        color: white;
    }

    .btn-danger > a {
        text-decoration: none;
        color: white;
    }
</style>
<div style="margin-bottom:60px">
    <button class="btn btn-primary col-md-2"><span class="glyphicon glyphicon-plus"></span> @Html.ActionLink("Agregar nuevo producto", "Create") </button>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 style="font-weight:bold">Productos existentes</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Existencia
                    </th>
                    <th>
                        precio de venta $
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Estatus
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Imagen
                    </th>
                    <th>
                        Subcategoría
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.existencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio_venta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.stock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.marca)
                    </td>
                    <th>
                        <img src="~/Content/img/products/@Html.DisplayFor(model => item.imagen)" alt="Imagen aqui" width="80" />
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subcategorias.nombre)
                    </td>
                    <td>
                        <div class="text-center">
                            <span>
                                <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span> @Html.ActionLink("Editar", "Edit", new { id = item.Id_producto }) </button>
                            </span>
                            <span>
                                <button class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-plus"></span> @Html.ActionLink("Detalles", "Details", new { id = item.Id_producto }) </button>
                            </span>
                            <span>
                                <button class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_producto }) </button>
                            </span>

                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
