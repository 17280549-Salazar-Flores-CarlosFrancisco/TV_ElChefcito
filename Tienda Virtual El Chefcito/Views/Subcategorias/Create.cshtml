@model VistasAct3.Models.Subcategorias

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Crear subcategoría</h2>
<script>

</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-success">
            <div class="panel-heading">
                <h4>Subcategorias</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2">
                            @Html.LabelFor(model => model.nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>

                        <div class="col-md-8">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" , @placeholder="Ingrese el nombre"} })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2">
                            @Html.LabelFor(model => model.descripcion, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>

                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control" , @placeholder = "Ingrese una descripción" } )
                            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2">
                            @Html.LabelFor(model => model.imagen, "Nombre de la imagen", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>

                        <div class="col-md-8">
                            @Html.EditorFor(model => model.imagen, new { htmlAttributes = new { @class = "form-control" ,@placeholder = "Ingrese el nombre de la imagen" } })
                            @Html.ValidationMessageFor(model => model.imagen, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2">

                            @Html.LabelFor(model => model.estatus, "Seleccione el estatus", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>

                        <div class="col-md-2">
                            @Html.RadioButtonFor(model => model.estatus, "1")
                            <label for="1">Activo</label>
                            @Html.ValidationMessageFor(model => model.estatus, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-offset-2">
                            @Html.RadioButtonFor(model => model.estatus, "0")
                            <label for="0">Inactivo</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2">
                            @Html.LabelFor(model => model.id_categoria, "Categoría", htmlAttributes: new { @class = "control-label col-md-2" })
                        </div>

                        <div class="col-md-8">
                            @Html.DropDownList("id_categoria", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_categoria, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-7">
                        <button id="guardar" type="submit" value="Create" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Crear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div id="popupModel" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"></h3>
                <button type="button" class="close" data-dismiss="modal">X</button>
            </div>
            <div style="padding:5px">
                <div style="background-color:khaki;padding-left:15px">
                    <span id="1"></span> <span id="2"></span>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>

    <div>
        <div>
            <button class="btn btn-danger"><span class="glyphicon glyphicon-list-alt"></span> <a href="/Subcategorias" style="text-decoration: none; color:white"> Regresar a la lista</a> </button>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
