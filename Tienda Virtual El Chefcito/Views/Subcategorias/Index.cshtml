@model IEnumerable<VistasAct3.Models.Subcategorias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Listado de subcategorías</h2>
<style>
    .btn-primary > a {
        text-decoration: none;
        color: white;
    }

    .btn-warning > a {
        text-decoration: none;
        color: white;
    }

    .btn-danger > a {
        text-decoration: none;
        color: white;
    }
</style>
<div style="margin-bottom:60px">
    <button class="btn btn-primary col-md-2"><span class="glyphicon glyphicon-edit"></span> @Html.ActionLink("Crear nueva categoría", "Create") </button>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 style="font-weight:bold">Subcategorías disponibles</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-bordered">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>
                <th>
                    Imagen
                </th>
                <th>
                    Estatus
                </th>
                <th>
                    Nombre de categoría
                </th>
                <th>Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        <img src="~/Content/img/@item.imagen" width="80">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorias.nombre)
                    </td>
                    <td>
                        <div class="text-center">
                            <span>
                                <button class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span> @Html.ActionLink("Editar", "Edit", new { id = item.Id_subcategoria }) </button>
                            </span>
                            <span>
                                <button class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-plus"></span> @Html.ActionLink("Detalles", "Details", new { id = item.Id_subcategoria }) </button>
                            </span>
                            <span>
                                <button class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_subcategoria }) </button>
                            </span>

                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
    
   
