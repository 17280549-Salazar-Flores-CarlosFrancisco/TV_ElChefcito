<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Distribuidoras Chefcito</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        .nav.navbar-nav li a {
            color: black;
        }

        .navbar-brand {
            color: white !important;
        }
    </style>
</head>
<body>
    <style>
        footer {
            background-color: #6e0516;
            color: #ffffff;
            height: 100px;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: rgba(255, 0, 0, 0.7);">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img class="img-circle" src="~/Content/img/Logo.png" alt="Site Logo" style="height: 32px; width: 32px; width: 32px;" />
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Distribuidoras Chefcito", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Paquetería</a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Agregar", "Create", "Paqueteria")</li>
                            <li>@Html.ActionLink("Ver todos", "Index", "Paqueteria")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Envíos</a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Ver pedidos sin fecha de envio", "Index", "Envio")</li>
                            <li>@Html.ActionLink("Ver pedidos sin fecha de entrega", "Index1", "Envio")</li>
                            <li>@Html.ActionLink("Ver pedidos enviados y con fecha de entrega", "Index2", "Envio")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <br />
            <center><strong>&copy; @DateTime.Now.Year - Distribuidoras Chefcito 2021 S.A de C.V</strong></center>
            <br />
            <center><strong>Equipo 1 - Ecommerce</strong></center>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
