@using Tienda_Virtual_El_Chefcito.Models
@{
    ViewBag.Title = "BuscarProd";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Lista de productos @ViewBag.SearchKey</h2>

<div class="container" style="padding-top: 10px;">
    @Html.ActionLink("Producto", "productos", "Catalogo", new { @class = "btn" })
    @Html.ActionLink("Categoria", "categorias", "Catalogo", new { @class = "btn" })
    @Html.ActionLink("Subcategoria", "subCategorias", "Catalogo", new { @class = "btn" })

</div>

    <div class="container" style="padding-top: 10px;">
        <div class="row">
            @foreach (Productos producto in ViewBag.Listado)
            {
                <div class="col-xs-3">
                    <div>
                        <div class="panel panel-default" style="text-align: center; padding: 10px; background-color: lemonchiffon;">
                            <div class="panel-body">
                                <h3>@producto.nombre</h3>
                                <img class="img-responsive rounded border-0" src="~/Content/img/@producto.imagen" />
                                <p style="padding-top: 10px;">
                                    @producto.precio_venta
                                </p>
                                <div class="row">
                                    @Html.ActionLink("Añadir a carrito", "Agregar", "AnonCarrito", new { id = producto.id_producto }, new { @class = "btn btn-success" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>

