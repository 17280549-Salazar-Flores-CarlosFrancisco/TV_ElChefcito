@using Tienda_Virtual_El_Chefcito.Models
@{
    ViewBag.Title = "productos";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>¡Bienvenido(a) a nuestro extenso catálogo!</h2>

<div class="container" style="padding-top: 10px;">
    @Html.ActionLink("Producto", "productos", "Catalogo", new { @class = "btn" })
    @Html.ActionLink("Categoria", "categorias", "Catalogo", new { @class = "btn" })
    @Html.ActionLink("Subcategoria", "subCategorias", "Catalogo", new { @class = "btn" })

</div>
<br />
<div class="container" style="padding-top: 10px;">
    <div class="row">
        @foreach (Productos item in ViewBag.productos)
        {
            <div class="col-xs-3">
                <div>
                    <div class="panel panel-default" style="text-align: center; padding: 10px; background-color: lemonchiffon;">
                        <div class="panel-body">
                            <h3>@item.nombre</h3>
                            <a href="@Url.Action("Index", "Producto")">
                                <img class="img-responsive rounded border-1" src="~/Content/img/@item.imagen" />
                            </a>
                            <p style="padding-top: 10px;">
                               $ @item.precio_venta
                            </p>
                            <div class="row">
                                @Html.ActionLink("Ver detalles", "DetalleProd", "Catalogo", new { id = item.id_producto }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Añadir a carrito", "Agregar", "AnonCarrito", new { id = item.id_producto }, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
