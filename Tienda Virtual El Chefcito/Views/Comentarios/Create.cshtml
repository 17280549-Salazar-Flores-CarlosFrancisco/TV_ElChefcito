@model Actividad3Vistas.Models.Comentario

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int idC = Convert.ToInt32(Session["idclien"].ToString());
}

<style>
    .btn-primary  > a {
        text-decoration: none;
        color: white;
    }
    .btn-danger > a {
        text-decoration: none;
        color: white;
    }

</style>
<div class="container">
    <div class="panel panel-success">
        <div class="panel-heading">
            <label class="panel-title"><b><i class="glyphicon glyphicon-info-sign"></i> Realizar queja</b></label>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Create", "Comentarios", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-offset-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.titulo, "Ingrese un titulo", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } }) 
                                    @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.descripcion, "Queja de su compra", htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-6">

                                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", cols = "100" })
                                    @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div hidden>
                        <input name="id_venta" value=@ViewBag.id_venta id="id_venta"/>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-4">
                            <div class="col-md-2">
                                <button type="button" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i> @Html.ActionLink("Cancelar", "Index", "PedidoCompletadoController", new { idU = idC })</button>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" value="Create" class="btn btn-success"><i class="glyphicon glyphicon-file"></i> Crear Queja</button>
                            </div>

                        </div>
                    </div>
                </div>
            }
            <br />
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
