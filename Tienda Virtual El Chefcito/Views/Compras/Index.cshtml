
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<h2>Index</h2>

<style>
    .compras {
        border-radius: 5px;
        color: #23af35;
        text-align: center;
        width:600px;
        align-content:center;
        font-size:x-large;

        
   }
    .accesos {
        border-radius: 7px;
        color: #1273b9;
        text-align: center;
        width: 200px;
        margin-bottom:10px;
        margin-top:10px;
        align-content:center;
        
    }
</style>

<div class="container">
    <div align="center">
        <h2> Bienvenido</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:900px; height:auto">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/img/carcompras1.jpg" alt="Imagen compras1" style="opacity:0.6">
                    <div class="carousel-caption carr-text">
                        <h3>Liste sus compras</h3>
                        <p>Vea todos sus productos, subcategorias y categorías</p>
                    </div>
                </div>



                <div class="item">
                    <img src="~/Content/img/carcompras2.jpg" alt="Imagen registrar" style="opacity:0.6">
                    <div class="carousel-caption carr-text">
                        <h3>Registre</h3>
                        <p>Registre sus productos, subcategorias y categorías</p>
                    </div>
                </div>



                <div class="item">
                    <img src="~/Content/img/carcompras3.jpg" alt="Imagen actualizar" style="opacity:0.6">
                    <div class="carousel-caption carr-text">
                        <h3>Actualice</h3>
                        <p>Acutalice sus productos, subcategorias y categorías</p>
                    </div>
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</div>
<div class="container" style="margin-top:40px">
    <div class="text-center">
        <h3 style="font-weight:bold"> 
            Accesos Directos
        </h3>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default" style="background-color:#20d537"> 
                <div class="panel-body">
                    <div class="text-center">
                        <h4 style="font-weight:bold">Categorías</h4>
                        <img src="~/Content/img/categorias.png" width="150"/>
                        <div class="accesos col-md-offset-2" style="align-content:center"> En las categorías podrás visualizar todas las categorías diponibles, además de agregar nuevas, actualizarlas y eliminarlas.</div>
                        <button class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> <a href="@Url.Action("Create","Categorias")" style="text-decoration:none; color:white">Crear nueva categoría</a> </button>
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-4">
            <div class="panel panel-default" style="background-color:#20d537">
                <div class="panel-body">
                    <div class="text-center">
                        <h4 style="font-weight:bold">SubCategorías</h4>
                        <img src="~/Content/img/sub.png" width="150" />
                        <div class="accesos col-md-offset-2" style="align-content:center"> En las subcategorías podrás visualizar todas las subcategorías diponibles, además de agregar nuevas, actualizarlas y eliminarlas.</div>
                        <button class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> <a href="@Url.Action("Create","Subcategorias")" style="text-decoration:none; color:white">Crear nueva subcategoría</a> </button>
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-4">
            <div class="panel panel-default" style="background-color:#20d537">
                <div class="panel-body">
                    <div class="text-center">
                        <h4 style="font-weight:bold">Productos</h4>
                        <img src="~/Content/img/prod.png" width="150" />
                        <div class="accesos col-md-offset-2"> Al igual que con las categorías, aquí vas a poder agregar, actualizar y eliminar los productos disponibles. </div>
                        <button class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> <a href="@Url.Action("Create","Productos")" style="text-decoration:none; color:white">Añadir nuevo producto</a> </button>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>

<div class="container " style="margin-top: 50px" align="center">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default" style="background-color: #cf5a08">
                <div class="panel-body">
                    <div class="col-md-4">
                        <div class="text-left">
                            <img src="~/Content/img/comprador.png" width="300" style="vertical-align:middle" />

                        </div>
                    </div>
                    <div class="col-md-8" style="margin-top:100px">
                        <div class="text-center">
                            <h2 class="compras">Al igual que con las categorías y subcategorías, aquí vas a poder agregar, actualizar y eliminar los productos disponibles.</h2>

                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
             
    </div>
    
</div>
