@model Almacenista.Models.Paqueterias

@{
    ViewBag.Title = "Detalles de Paquetería";
    Layout = "~/Views/Shared/_LayoutAlmacenista.cshtml";
}

<h2>Detalle de la Paquetería</h2>
<style>

    .btn-primary > a {
        text-decoration: none;
        color: white;
    }

    .btn-warning > a {
        text-decoration: none;
        color: white;
    }

    .btn-danger > a {
        text-decoration: none;
        color: white;
    }
</style>
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Paquetería</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-bordered" style="background-color:aliceblue">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Razón Social
                </th>
                <th>
                    RFC
                </th>
                <th>
                    Página Web
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Teléfono
                </th>
                <th>
                    Estado
                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayFor(model => model.razon_social)
                </th>
                <th>
                    @Html.DisplayFor(model => model.rfc)
                </th>
                <th>
                    @Html.DisplayFor(model => model.pagina_web)
                </th>
                <th>
                    @Html.DisplayFor(model => model.direccion)
                </th>
                <th>
                    @Html.DisplayFor(model => model.telefono)
                </th>
                <th>
                    @Html.DisplayFor(model => model.estatus)
                </th>
            </tr>
            </table>
        </div>
            
    </div>
    <p class="text-center">
        <span>
            <button class="btn btn-warning btn-sm">
                <span class="glyphicon glyphicon-edit"></span>@Html.ActionLink("Editar", "Edit", new { id = Model.id_paqueteria })
            </button>
        </span>
        <span>
            <button class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-backward"></span>@Html.ActionLink("Ver Paqueterías", "Index")
            </button>
        </span>
    </p>
